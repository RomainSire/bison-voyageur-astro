{
    // formatting
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "html.format.wrapAttributes": "force-aligned",
    "prettier.endOfLine": "auto",
    "prettier.printWidth": 120,
    "prettier.requireConfig": true,
    "prettier.useTabs": true,
    "[css]": {
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[scss]": {
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
    "yaml.customTags": [
        "!reference sequence"
    ],
    // Git settings
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.pruneOnFetch": true,
    "git.inputValidationSubjectLength": null,
    // Jest settings
    "testing.openTesting": "neverOpen",
    "jest.rootPath": "front/packages/framework",
    "jest.jestCommandLine": "npm run test:unit --runInBand --",
    "jest.monitorLongRun": "off",
    "jest.runMode": {
        "type": "on-save",
        "testFileOnly": true,
        "runAllTestsOnStartup": true,
        "deferred": true
    },
    "jest.outputConfig": {
        "revealOn": "error",
        "revealWithFocus": "test-results",
        "clearOnRun": "terminal"
    },
    "jest.coverageFormatter": "GutterFormatter",
    //  Other settings
    "scss.validate": true,
    "editor.linkedEditing": true,
    "diffEditor.diffAlgorithm": "advanced",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "npm.packageManager": "npm",
    "npm-intellisense.packageSubfoldersIntellisense": true,
    "npm-intellisense.scanDevDependencies": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "@todo"
    ],
    "eslint.options": {
        "resolvePluginsRelativeTo": "./front/packages/framework"
    },
    "eslint.workingDirectories": [
        {
            "mode": "location",
            "directory": "./framework",
            "!cwd": true
        }
    ],
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "typescript.tsdk": "front/node_modules/typescript/lib",
}